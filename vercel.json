{
    "buildCommand": "npm install --prefix app && npm run build --prefix app",
    "outputDirectory": "app/build",
    "framework": "create-react-app",
    "functions": {
        "api/*.js": {
            "memory": 512,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}